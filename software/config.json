{
  "inputs": [
    {
      "driver": "lirc"
    },
    {
      "driver": "http",
      "config": {
        "bind": "0.0.0.0",
        "port": 8080
      }
    }
  ],
  "devices": [
    {
      "driver": "lirc",
      "config": {
        "discover": true
      }
    },
    {
      "driver": "cec",
      "config": {
        "devices": [
          { "name": "tv", "address": 0 },
          {
            "name": "receiver",
            "address": 5,
            "overrides": {
              "KEY_AV1": "custom/yamaha-hacks.js"
            }
          }
        ]
      }
    }
  ]
}
