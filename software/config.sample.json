{
  "logger": {
    "Console": {
      "level": "info",
      "colorize": true
    },
    "File": {
      "level": "info",
      "json": false,
      "filename": "/var/log/ir-blaster.log"
    }
  },
  "inputs": [
    {
      "driver": "http",
      "config": {
        "bind": "0.0.0.0",
        "port": 8080
      }
    }
  ],
  "devices": [
		{
      "driver": "lirc",
      "config": {
        "discover": true
      }
    },
    {
      "driver": "cec",
      "config": {
        "devices": [
          { "name": "tv", "address": 0 }
        ]
      }
    }
  ]
}
